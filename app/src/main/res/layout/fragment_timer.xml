<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="org.androidtown.offerproject.TimerFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView__upper_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="60dp"
            android:text="minute"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView__upper_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="100dp"
            android:text="second"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <!--<EditText
            android:id="@+id/minuteinput"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/clock"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="40dp"
            android:layout_toLeftOf="@+id/clock"
            android:layout_toStartOf="@+id/clock"
            android:ems="10"
            android:inputType="number"
            android:text="00"
            android:layout_marginLeft="40dp" />-->

        <ListView
            android:id="@+id/list_minute"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginLeft="45dp">

        </ListView>


        <TextView
            android:id="@+id/clock"
            android:layout_width="30dp"
            android:layout_height="74dp"
            android:textColor="#000000"
            android:layout_below="@+id/pause"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text=":"
            android:textSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ListView
            android:id="@+id/list_second"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp">

        </ListView>


        <!--<EditText
            android:id="@+id/secondinput"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/clock"
            android:layout_marginEnd="50dp"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/clock"
            android:layout_toRightOf="@+id/clock"
            android:ems="10"
            android:inputType="number"
            android:text="00"
            android:layout_marginRight="50dp" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_minute"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:textColor="#000000"
            android:gravity="center"
            android:text="00"
            android:textSize="60sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/clock2"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/pause"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:textColor="#000000"
            android:gravity="center"
            android:text=":"
            android:textSize="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_second"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:textColor="#000000"
            android:text="00"
            android:textSize="60sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pause"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@+id/clock"
            android:layout_toRightOf="@+id/clock"
            android:text="START" />

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="70dp"
            android:layout_toLeftOf="@+id/start"
            android:layout_toStartOf="@+id/start"
            android:text="정지" />

    </LinearLayout>

</LinearLayout>
